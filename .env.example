# CPOS Hub - Environment Configuration Example
# Copy this file to .env and adjust values as needed

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost

# Cloud API
# URL of the Cloud server for authentication and hub registration
CLOUD_API_URL=http://localhost:8000

# FRP Client Configuration
# Server address and port for tunnel connection to Cloud
# For local development, use localhost:7100
# For production, use erplora.com:7100
FRP_SERVER_ADDR=localhost
FRP_SERVER_PORT=7100

# FRP authentication token (must match server configuration)
# This is the global token for FRP server authentication
# Different from tunnel_token which is per-hub credential
FRP_AUTH_TOKEN=cpos-local-dev-token

# Hub local server port (where Django runs)
HUB_LOCAL_PORT=8001

# Database (SQLite - no configuration needed)
# DB_PATH is auto-configured to use user data directory

# Logging
LOG_LEVEL=INFO
