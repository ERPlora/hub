# CPOS Hub - Environment Configuration Example
# Copy this file to .env and adjust values as needed

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost

# Cloud API
# URL of the Cloud server for authentication and hub registration
CLOUD_API_URL=http://localhost:8000

# FRP Server
# Server address and port for tunnel connection to Cloud
# For local development, use localhost
# For production, use cpos.app
FRP_SERVER_ADDR=localhost
FRP_SERVER_PORT=7100

# Database (SQLite - no configuration needed)
# DB_PATH is auto-configured to use user data directory

# Logging
LOG_LEVEL=INFO
